{% extends 'layout.box.html.twig' %}

{% block title %}
	Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="container py-3 ">
		<h2 class="text-center mb-3">Réinitialisation du mot de passe</h2>
		{{ form_start(resetPassword)}}
		{{ form_row(resetPassword.password)}}
		<button type="submit" class="container justify-content-center btn btn-success my-3">Réinitialiser</button>
		{{ form_end(resetPassword)}}
	</div>
{% endblock %}
