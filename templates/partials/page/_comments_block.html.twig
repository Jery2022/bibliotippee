
{% block body %}
    <div class="container-fluid px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
    
        {% for comment in comments %}
                <div class="col mb-5">
                        <div class="card h-100">
                            <img class="card-img-top" 
                                src="{{ vich_uploader_asset(user, 'imageNameDocument') }}" 
                                alt="Affiche {{ document.title }}"  />
                            <!-- comment elements--> 
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- comment content-->
                                    <h5 class="fw-bolder">Commentaire : {{ document->comment.content }}</h5>
                                </div>  
                                <!-- comment rate-->
                                <div class="text-center">
                                    <!-- comment content-->
                                    <h5 class="fw-bolder">Rate : {{ document.comment.rate }}</h5>
                                </div>    
                                    <!-- Document dates -->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="dateformat">Publié le : {{ document.comment.publishAt ? document.comment.publishAt|date('d-m-Y H:i:s') : ' ' }}</div>
                                </div>  
                            </div>
                    </div>
            </div>
        {% else %}
                <div class="text-center bg-warning">Désolé aucun commentaire trouvé !</div>
        {% endfor %}
        </div>
{% endblock %}
