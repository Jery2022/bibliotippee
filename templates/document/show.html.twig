{% extends 'base.html.twig' %}

{% block title %}Document{% endblock %}

{% block body %}
    <h1>Document</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ document.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ document.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ document.author }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ document.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ document.description }}</td>
            </tr>
            <tr>
                <th>FileNameDocument</th>
                <td>{{ document.FileNameDocument }}</td>
            </tr>
            <tr>
                <th>FileSizeDocument</th>
                <td>{{ document.fileSizeDocument }}</td>
            </tr>
            <tr>
                <th>FileMimeTypeDocument</th>
                <td>{{ document.fileMimeTypeDocument }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ document.createdAt ? document.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishAt</th>
                <td>{{ document.publishAt ? document.publishAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_document_index') }}">back to list</a>

    <a href="{{ path('app_document_edit', {'id': document.id}) }}">edit</a>

    {{ include('document/_delete_form.html.twig') }}
{% endblock %}
