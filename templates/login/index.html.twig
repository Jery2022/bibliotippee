{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {% if error   %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="col col-xl-5 mx-auto mt-5 mb-5 bg-light">
        <div class="col bg-white"  >
            <div class="row justify-content-center">
                <img src="{{ asset('build/images/logo/Logo-cntippee100.jpg') }}" 
                        alt="logo bibliotippee" 
                        style="width:100px; height:100px; align:center; margin: 25px;"
                        />
            </div>
        </div>
        <div style="background-color: #d0d0d0;">
            <h2 class="text-center p-3">S'identifier</h2>
                <form action="{{ path('app_login') }}" method="post">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}">

                    <label for="password">Password :</label>
                    <input type="password" id="password" name="_password">

                    {#  the URL the user is redirected to on success #}
                    <input type="hidden" name="_target_path" value="/"> 
                    <input type="hidden" name="_csrf_token" 
                        value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-success" type="submit">S'identifier</button>
                </form>
            </div>
        </div>
</div>
{% endblock %}